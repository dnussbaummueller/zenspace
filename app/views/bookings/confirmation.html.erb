<div class="container">
  <div class="my-card">
    <h1>Your booking was successful.</h1>

    <ul class="list-group list-group-flush border-top border-bottom pb-3 mb-3">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Class
              <span><%= @booking.yoga_class.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Starts
              <span><%= @booking.yoga_class.start_time %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Ends
              <span><%= @booking.yoga_class.end_time %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Studio
              <span><%= @booking.yoga_class.yoga_studio_teacher.yoga_studio.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Address
              <span><%= @booking.yoga_class.yoga_studio_teacher.yoga_studio.address %></span>
            </li>
          </ul>
        <div class="map">
          <h2>Here comes the map</h2>
        </div>
      <%= link_to "Back to all classes", yoga_classes_path, class: "btn-flat w-100" %>

  </div>

</div>
